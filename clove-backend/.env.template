# =============================================================================
# CLOVE Learning Platform - Environment Configuration
# =============================================================================
# 
# Copy this file to .env and adjust values based on your environment:
# - DEVELOPMENT: Use localhost URLs and local database
# - PRODUCTION: Use live URLs and Render database
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# DEVELOPMENT: postgresql+asyncpg://username:password@localhost:5432/clove_dev
# PRODUCTION: postgresql+asyncpg://clove_user:password@host:port/clove_db?ssl=require
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database_name

# =============================================================================
# JWT SETTINGS
# =============================================================================
JWT_SECRET_KEY=your_secure_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# CORS SETTINGS
# =============================================================================
# DEVELOPMENT: ["http://localhost:5173", "http://localhost:3000", "http://localhost:8000"]
# PRODUCTION: ["https://clove-frontend.netlify.app", "http://localhost:5173"]
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://localhost:8000"]

# =============================================================================
# ENVIRONMENT
# =============================================================================
# DEVELOPMENT: development
# PRODUCTION: production
ENV=development

# DEVELOPMENT: true
# PRODUCTION: false
DEBUG=true

# =============================================================================
# DATABASE POOL SETTINGS
# =============================================================================
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# =============================================================================
# RATE LIMITING
# =============================================================================
# DEVELOPMENT: 1000 (higher for testing)
# PRODUCTION: 500 (balanced for production)
RATE_LIMIT_PER_MINUTE=300

# =============================================================================
# LOGGING
# =============================================================================
# DEVELOPMENT: DEBUG
# PRODUCTION: INFO
LOG_LEVEL=INFO

# =============================================================================
# SECURITY
# =============================================================================
# DEVELOPMENT: ["localhost", "127.0.0.1"]
# PRODUCTION: ["clove-backend.onrender.com", "localhost", "127.0.0.1"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# DEVELOPMENT: Use Brevo (smtp-relay.brevo.com)
# PRODUCTION: Use Gmail (smtp.gmail.com) - more reliable
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-brevo-email@smtp-brevo.com
SMTP_PASSWORD=your-generated-smtp-password
EMAILS_FROM_EMAIL=your-brevo-email@smtp-brevo.com
EMAILS_FROM_NAME=CLOVE Learning Platform
EMAIL_RESET_TOKEN_EXPIRE_HOURS=6

# =============================================================================
# FRONTEND URL (for email verification links)
# =============================================================================
# DEVELOPMENT: http://localhost:5173
# PRODUCTION: https://clove-frontend.netlify.app
FRONTEND_URL=http://localhost:5173